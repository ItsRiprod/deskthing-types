{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ESNext",
      "declaration": true,
      "outDir": "./dist",
      "strict": true,
      "moduleResolution": "bundler",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "types": ["node"],
      "isolatedModules": true,
      "composite": true,
      "declarationMap": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
  }